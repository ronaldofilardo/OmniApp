{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "../../",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "shared/*": ["../../packages/shared/*"],
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*", "tests/**/*", "../../packages/shared/src/**/*"]
}
